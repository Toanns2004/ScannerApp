<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        android:background="@drawable/cusom_rectangle_home"
        android:backgroundTint="@color/time"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white" />


        <EditText
            android:id="@+id/text_title_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:background="@drawable/edit_text_no_underline"
            android:hint="Please fill in the wwebsite address"
            android:textColorHint="@color/icon"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btn_http"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="http://"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:background="@drawable/custom_btn_continue"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btn_https"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="https://"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:background="@drawable/custom_btn_continue"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btn_www"

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="www."
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:background="@drawable/custom_btn_continue"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btn_com"

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=".com"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:background="@drawable/custom_btn_continue"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>