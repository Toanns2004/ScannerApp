<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.generate.layouts.GenerateFragment3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btn_back_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_home"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn_continue"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            >


        </Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:src="@drawable/image_home_baner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_saved"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your QR to your friends via"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cusom_rectangle_home"
            android:backgroundTint="@color/blue"
            android:padding="15dp"
            android:src="@drawable/icon_fb"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_skype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cusom_rectangle_home"
            android:backgroundTint="@color/time"
            android:padding="15dp"
            android:src="@drawable/icon_skype" />

        <ImageView
            android:id="@+id/btn_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cusom_rectangle_home"
            android:backgroundTint="@color/blue"
            android:padding="15dp"
            android:src="@drawable/icon_mess"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cusom_rectangle_home"
            android:backgroundTint="@color/text"
            android:padding="15dp"
            android:src="@drawable/icon_insta" />

        <ImageView
            android:id="@+id/btn_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cusom_rectangle_home"
            android:backgroundTint="@color/pink"
            android:padding="15dp"
            android:src="@drawable/icon_youtube" />



    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rate_now"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"/>
</LinearLayout>