<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.mains.HistoryScanFragment"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="30dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/btn_scan_history"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Scan History"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/custom_btn_continue"

            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_generate_history"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/custom_btn_continue"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_history_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>